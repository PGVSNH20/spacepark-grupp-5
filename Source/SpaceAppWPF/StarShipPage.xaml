<Page x:Class="SpaceAppWPF.StarShipPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:local="clr-namespace:SpaceAppWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StarShipPage">

    <Grid>
        <Image x:Name="background" gif:ImageBehavior.AnimatedSource="Resources/StarfieldSimulation.gif" gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AutoStart="True" Stretch="UniformToFill"/>
        <RadioButton Content="All ships" HorizontalAlignment="Left" Margin="464,141,0,0" VerticalAlignment="Top" Foreground="#FFC3C300" BorderBrush="#FFC3C300" Checked="GetAllShips"/>
        <RadioButton Content="My ships" HorizontalAlignment="Left" Margin="274,141,0,0" VerticalAlignment="Top" Foreground="#FFC3C300" BorderBrush="#FFC3C300" Checked="GetMyShips"/>
        <ListBox x:Name="listBox" Margin="200,179,200,0" Background="Transparent" BorderBrush="#FFC3C300" Foreground="#FFC3C300" MouseDoubleClick="ShipIsSelected"/>
        <Label x:Name="welcomeLabel" Content="Select a ship !" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="32" Foreground="#FFC3C300"/>
    </Grid>
</Page>
